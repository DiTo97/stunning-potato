<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_img_gallery_margin"

    card_view:cardCornerRadius="@dimen/card_img_gallery_radius"
    card_view:cardElevation="@dimen/card_img_gallery_margin"
    card_view:layout_anchorGravity="center">

    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="@dimen/card_img_gallery_size"
        android:layout_height="@dimen/card_img_gallery_size"
        android:contentDescription="@string/iv_gallery_desc"
        android:scaleType="centerCrop" />

</androidx.cardview.widget.CardView>