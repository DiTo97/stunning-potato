<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Command picker buttons -->
    <style name="ShapeAppearanceOverlay.Oval">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FrameCommandButton">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">124dp</item>
        <item name="android:background">@drawable/shape_rect</item>
        <item name="android:elevation">4dp</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CommandButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:padding">0dp</item>
        <item name="android:tag">@string/tag_btn_command</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Oval</item>
    </style>

    <style name="CommandText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>